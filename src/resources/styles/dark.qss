/* Toolbar */

QMainWindow > QToolBar {
  border-bottom-color: rgba(255, 255, 255, 16%);
}

QMainWindow > #centralWidget > QSplitter {
  background-color: rgba(0, 0, 0, 30%);
}
QMainWindow > #centralWidget > QSplitter::handle {
  background-color: rgba(255, 255, 255, 16%);
}

/* Navigation */

QTreeWidget#navigation::item:hover {
  background-color: rgba(255, 255, 255, 5%);
}
QTreeWidget#navigation::item:selected:active {
  background-color: rgba(255, 255, 255, 20%);
}
QTreeWidget#navigation::item:selected:!active {
  background-color: rgba(255, 255, 255, 10%);
}

/* List */

QMainWindow > QWidget > QSplitter > QStackedWidget QListView,
QMainWindow > QWidget > QSplitter > QStackedWidget QTreeView {
  border-top-color: rgba(255, 255, 255, 16%);
}

QMainWindow > QWidget > QSplitter > QStackedWidget QAbstractScrollArea {
  background-color: #1c1c1c;
}

QTreeView#animeList QHeaderView {
  border-bottom-color: rgba(255, 255, 255, 16%);
}

QTreeView#animeList,
QTreeView#historyView,
QTreeView#libraryView {
  background-color: #1c1c1c;
  alternate-background-color: rgba(255, 255, 255, 3%);
}
QTreeView#animeList::item:hover,
QTreeView#historyView::item:hover,
QTreeView#libraryView::item:hover {
  background-color: rgba(255, 255, 255, 5%);
}
QTreeView#animeList::item:selected:active,
QTreeView#historyView::item:selected:active,
QTreeView#libraryView::item:selected:active {
  background-color: rgba(255, 255, 255, 20%);
}
QTreeView#animeList::item:selected:!active,
QTreeView#historyView::item:selected:!active,
QTreeView#libraryView::item:selected:!active {
  background-color: rgba(255, 255, 255, 10%);
}

/* Now Playing */

#nowPlaying {
  border-top-color: rgba(255, 255, 255, 16%);
}

/* Statusbar */

QStatusBar {
  border-top-color: rgba(255, 255, 255, 16%);
}

/* Media dialog */

#posterLabel {
  background-color: rgba(0, 0, 0, 30%);
}
